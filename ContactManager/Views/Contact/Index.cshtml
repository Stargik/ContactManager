@model IEnumerable<ContactManager.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
}

<h1>Contacts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="filterBlock">
    <div id="filterForm">
        <p>
            <input type="checkbox" id="isUseNameFilter"> Filter by @Html.DisplayNameFor(model => model.Name): <input type="text" id="Name">
        </p>
        <p>
            <input type="checkbox" id="isUseBirthDateFilter"> Filter by @Html.DisplayNameFor(model => model.BirthDate): <input type="date" id="BirthDate">
            <select id="birthDateFilterType">
                <option value="1">After</option>
                <option value="2">Before</option>
            </select>
        </p>
        <p>
            <input type="checkbox" id="isUseMarriedFilter"> Filter by @Html.DisplayNameFor(model => model.IsMarried): <input type="checkbox" id="IsMarried">
        </p>
        <p>
            <input type="checkbox" id="isUsePhoneFilter"> Filter by @Html.DisplayNameFor(model => model.Phone): <input type="tel" id="Phone">
        </p>
        <p>
            <input type="checkbox" id="isUseSalaryFilter"> Filter by @Html.DisplayNameFor(model => model.Salary): <input type="number" id="Salary">
            <select id="salaryFilterType">
                <option value="1">More</option>
                <option value="2">Less</option>
            </select>
        </p>
    </div>
    <input type="submit" value="Filter submit" id="filterSubmit">
    <input type="submit" value="Filter clear" style="display: none;" id="filterClear">
</div>
<p>Click on the column title to sort.</p>
<table class="table" id="contactTable">
    <thead>
        <tr class="sortRow">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMarried)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsMarried)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
