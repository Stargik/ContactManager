@model IEnumerable<ContactManager.Models.Contact>

@{
    ViewData["Title"] = "Import";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <h4>Import from CSV</h4>
    <p>Use semicolon (",") delimiter and "yyyy-MM-dd" date pattern.</p>
    <div class="col-12">
        @using (Html.BeginForm("Import", "Contact", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="mb-3">
                <label for="contactsFile" class="form-label">Choose file</label>
                <input type="file" name="contactsFile" id="contactsFile" />
            </div>
            <div>
                <input class="btn btn-primary mb-3" type="submit" value="Upload" />
            </div>
        }
    </div>
</div>
